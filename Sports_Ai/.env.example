# SportsAI Platform Environment Configuration

# Environment
NODE_ENV=development

# Backend
BACKEND_PORT=4000
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://sportsai:sportsai_dev@localhost:5432/sportsai
REDIS_URL=redis://localhost:6379
TIMESCALE_URL=postgresql://sportsai:sportsai_dev@localhost:5433/sportsai_timeseries

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/callback

# External APIs (add your API keys)
THE_ODDS_API_KEY=
SPORTSDATAIO_API_KEY=
SPORTRADAR_API_KEY=

# FREE APIs (no signup required)
THESPORTSDB_API_KEY=3

# FREE tier APIs (signup required but free tiers available)
# The Odds API - 500 credits/month free (signup at https://the-odds-api.com)
# OpenRouter AI - Free models available (signup at https://openrouter.ai)
OPENROUTER_API_KEY=

# Apify Integration (for web scraping odds data)
# Get your token at: https://console.apify.com/account/integrations
APIFY_API_TOKEN=

# Payments
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Feature Flags
ENABLE_LIVE_ODDS=true
ENABLE_ARBITRAGE_DETECTION=true
ENABLE_AI_INSIGHTS=false
