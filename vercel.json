{
  "version": 2,
  "name": "sportsai",
  "builds": [
    {
      "src": "Sports_Ai/backend/api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "Sports_Ai/backend/prisma/schema.prisma",
          "Sports_Ai/backend/node_modules/.prisma/client/*"
        ]
      }
    },
    {
      "src": "ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/Sports_Ai/backend/api/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/ui/$1"
    }
  ]
}
