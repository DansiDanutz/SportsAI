{
  "version": 2,
  "name": "sportsai",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "Sports_Ai/backend/prisma/schema.prisma",
          "Sports_Ai/backend/node_modules/.prisma/client/*",
          "Sports_Ai/backend/src/**"
        ]
      }
    },
    {
      "src": "ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "ui/$1",
      "check": true
    },
    {
      "src": "/(.*)",
      "dest": "ui/index.html"
    }
  ]
}
